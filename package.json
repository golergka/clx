{
  "name": "clx-cli",
  "version": "0.1.2",
  "description": "CLI API client generator from OpenAPI specs",
  "type": "module",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/golergka/clx.git"
  },
  "author": "golergka",
  "homepage": "https://github.com/golergka/clx",
  "bugs": {
    "url": "https://github.com/golergka/clx/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "clx": "./dist/clx"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "compile": "bun build src/index.ts --compile --outfile dist/clx",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run compile",
    "update-spec": "bun scripts/update-spec.ts",
    "update-specs": "bun scripts/update-spec.ts --all"
  },
  "keywords": [
    "cli",
    "openapi",
    "swagger",
    "api",
    "rest",
    "codegen",
    "api-client",
    "curl",
    "http"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "typescript": "^5.9.3"
  }
}
